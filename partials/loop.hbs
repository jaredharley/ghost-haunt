{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<div class="row">
	<div class="col-lg-12">
		<h2><a href="{{url}}">{{{title}}}</a></h2>
		<p class="subhead">{{date format="DD MMMM YYYY"}}</p>
		<p>{{excerpt words="50"}}</p>
		<p><a href="{{url}}">Continue reading &rarr;</a></p>
	</div><!-- /.col-sm-8 -->
</div><!-- /.row -->
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
